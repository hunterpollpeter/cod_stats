<% stats = {
    'score': @player.mode_score,
    'k/d ratio': @player.kd_ratio,
    'win%': number_with_precision(percentage(@player.win_percentage), precision: 1),
    'accuracy': @player.accuracy,
    # 'last played': time_ago_in_words(@player.last_played)
} %>

<nav class="navbar navbar-expand-lg navbar-light bg-light navbar-player">
  <div class="container">
    <%= link_to player_path @player do %>
      <div class="player navbar-brand mr-0 mr-md-3">
        <div class="level text-center align-middle mr-2">
          <%= image_tag level_image(@player), class: 'level-img' %>
          <small class="text-muted">Level <%= @player.level %></small>
        </div>
        <div class="username align-middle mr-0 mr-md-2">
          <h4><%= @player.username %></h4>
          <span class="badge badge-<%= @player.platform %>"> <%= friendly_platform @player.platform %></span>
        </div>
      </div>
    <% end %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#player_navbar" aria-controls="player_navbar" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse position-relative" id="player_navbar">
      <% stats.each do |stat, value| %>
        <span class="navbar-text navbar-stat mr-4">
          <%= stat %><br>
          <h5><%= value %></h5>
        </span>
      <% end %>
      <div class="player-updated d-none d-sm-block">
        <small class="text-muted">
          updated <%= time_ago_in_words @player.updated_at %> ago
          <%= link_to '#' do %>
            <i class="fas fa-sync ml-1"></i>
          <% end %>
        </small>
      </div>
    </div>
  </div>
</nav>

