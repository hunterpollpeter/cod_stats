<% flash.each do |key, value| %>
  <div class="alert alert-main alert-<%= key %> d-block">
    <div class="container">
      <div class="row">
        <div class="col-12 px-0 px-sm-3">
          <%= value %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      </div>
    </div>
  </div>
<% end %>